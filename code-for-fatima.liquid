<div class="container">
    <div class="col-xs-12">
      <div id="codehouse-customizer">
        <div class="navbar">
          <div class="navbar-inner">
            <ul>
              <li><a href="#tab1" data-toggle="tab">Question 1</a></li>
              <li><a href="#tab2" data-toggle="tab">Question 2</a></li>
              <li><a href="#tab3" data-toggle="tab">Result</a></li>
